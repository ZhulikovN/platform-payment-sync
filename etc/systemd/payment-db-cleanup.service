[Unit]
Description=Очистка старых записей из БД payment_events
After=network.target

[Service]
Type=oneshot
User=your_user
WorkingDirectory=/path/to/platform-payment-sync
ExecStart=/path/to/platform-payment-sync/.venv/bin/python scripts/cleanup_db.py --days 30
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
